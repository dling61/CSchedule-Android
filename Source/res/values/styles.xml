<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="confirmTitleStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bg_top_bar</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColorHint">@color/bg_top_bar</item>
    </style>

    <style name="edittextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@drawable/border_edittext_selector</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginBottom">@dimen/margin_top</item>
        <item name="android:paddingBottom">@dimen/margin_top</item>
        <item name="android:textSize">@dimen/text_name</item>
        <item name="android:textColorHint">@color/border_textview</item>
        <item name="android:textColor">@color/edittext</item>
        <item name="android:padding">@dimen/margin_left</item>
    </style>

    <style name="edittextStyleDate" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@drawable/border_edittext_selector</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginBottom">@dimen/margin_top</item>
        <item name="android:paddingBottom">@dimen/margin_top</item>
        <item name="android:textSize">@dimen/text_name</item>
        <item name="android:textColorHint">@color/border_textview</item>
        <item name="android:textColor">@color/edittext</item>
        <item name="android:paddingTop">@dimen/margin_left</item>
        <item name="android:paddingBottom">@dimen/margin_left</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="buttonStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_name</item>
        <item name="android:padding">@dimen/margin_left</item>
        <item name="android:background">@drawable/me_border</item>
    </style>

    <style name="buttonRemoveStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_name</item>
        <item name="android:padding">@dimen/margin_left</item>
        <item name="android:background">@drawable/btn_remove_selector</item>
    </style>

    <style name="tvTitleStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">@dimen/width_tv_add_activity</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textview</item>
        <item name="android:textSize">@dimen/text_name</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>