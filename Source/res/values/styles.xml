<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="confirmTitleStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bg_top_bar</item>
        <item name="android:textSize">@dimen/title_tv</item>
        <item name="android:textColorHint">@color/bg_top_bar</item>
    </style>

    <style name="edittextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@drawable/border_edittext_selector</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginBottom">@dimen/margin_top</item>
        <item name="android:textSize">@dimen/text_name</item>
        <item name="android:textColorHint">@color/border_textview</item>
        <item name="android:textColor">@color/edittext</item>
        <item name="android:paddingTop">@dimen/margin_left</item>
        <item name="android:paddingBottom">@dimen/margin_left</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
      
    </style>

    <style name="dateStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@drawable/border_edittext_selector</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:textSize">@dimen/text_name</item>
        <item name="android:textColorHint">@color/border_textview</item>
        <item name="android:textColor">@color/edittext</item>
        <item name="android:paddingTop">@dimen/margin_left</item>
        <item name="android:paddingBottom">@dimen/margin_left</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
    </style>

    <style name="buttonStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_name</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/me_border</item>
    </style>

    <style name="buttonRemoveStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_name</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/btn_remove_selector</item>
    </style>

    <style name="tvTitleStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">@dimen/width_tv_add_activity</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textview</item>
        <item name="android:textSize">@dimen/text_tv</item>
        <item name="android:textStyle">bold</item>
    </style>
    
     <style name="tvContactStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">@dimen/width_tv_add_contact</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textview</item>
        <item name="android:textSize">@dimen/text_tv</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tvContactName" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">@dimen/width_tv_add_contact</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_tv</item>
        <item name="android:textColor">@color/textview</item>
        
    </style>

    <style name="confirm_btn" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_description</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/me_border</item>
    </style>
<style name="toast" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_description</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/me_border</item>
    </style>
    <style name="title_bar_tv" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/title_bar_tv</item>
        <item name="android:textSize">@dimen/title_tv</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="edStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/text_name</item>
        <item name="android:textColorHint">@color/border_textview</item>
        <item name="android:textColor">@color/edittext</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
      <item name="android:gravity">center_vertical</item>
    
    </style>
    
 <style name="edStyleDate" parent="@android:style/TextAppearance.Medium">
       <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/text_name</item>
        <item name="android:textColorHint">@color/border_textview</item>
        <item name="android:textColor">@color/edittext</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
      
    </style>
    <style name="edStyleActivity" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@android:color/transparent</item>
         <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">@dimen/text_name</item>
        <item name="android:textColorHint">@color/border_textview</item>
        <item name="android:textColor">@color/edittext</item>
         <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
      
    </style>
</resources>