<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/compose_activity_topbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_title_bar"
        android:background="@color/bg_login_title_bar"
        android:padding="@dimen/margin_left" >

        <TextView
            android:id="@+id/tv_new_activity_toptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="@string/participant_infor"
            android:textColor="#FFF"
            android:textSize="@dimen/text_name"
            android:textStyle="bold" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/compose_activity_topbar"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:background="#ffffff"
        android:cacheColorHint="@color/white"
        android:divider="@color/divider_list"
        android:dividerHeight="1dp"
        android:scrollbars="@null"
        android:visibility="visible" >
    </ListView>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_item_dialog"
        android:layout_below="@id/list_item"
        android:background="@color/red_remove"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="@dimen/text_name"
        android:textStyle="bold"
        android:visibility="visible" />

</RelativeLayout>